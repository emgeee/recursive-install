{
  "name": "recursive-ci",
  "version": "1.0.0",
  "description": "CLI tool to recursive search child directories and run 'npm ci' when a package.json file is found.",
  "main": "recursive-ci.js",
  "keywords": [
    "ci",
    "recursive",
    "npm ci"
  ],
  "scripts": {
    "test": "./node_modules/.bin/mocha"
  },
  "bin": {
    "npm-recursive-ci": "./recursive-ci.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ReinoutW/recursive-ci"
  },
  "author": "Reinout Waelput",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ReinoutW/recursive-ci/issues"
  },
  "dependencies": {
    "shelljs": "^0.8.3",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "fs-extra": "^7.0.1",
    "mocha": "^5.2.0",
    "uuid": "^3.3.2"
  },
  "standard": {
    "ignore": [
      "public/**",
      "src/vendor/**"
    ],
    "global": [
      "describe",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "it"
    ]
  }
}
